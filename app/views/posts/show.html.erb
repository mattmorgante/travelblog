<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> ago
  </p>

  <p class="body">
    <%= @post.body %>
  </p>
  <% if user_signed_in? %>
    <button class="button"><%= link_to "Edit", edit_post_path(@post) %></button>
    <button class="button"><%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?"} %></button>
  <% end %>

  <div id="comments">
    <h2><%= @post.comments.count %> Comments</h2>
    <%= render @post.comments %> 

    <h3>Add a comment:</h3>
    <%= render "comments/form" %>
  </div>
</div>